            <outerPrice>60</outerPrice>
            <fixedLocation>120</fixedLocation>
        </callPrices>
        <smsPrice>10</smsPrice>
        <parameters>
            <connectionFee>500</connectionFee>
            <favoriteNumbers>
                <number>+7-707-154-15-44</number>
                <number>8-505-555-55-55</number>
            </favoriteNumbers>
        </parameters>
    </tariff>
    <tariff>
        <name>The Good Tariff</name>
