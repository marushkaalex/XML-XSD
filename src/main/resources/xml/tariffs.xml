           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://example.com/tariffs ../xsd/tariffsSchema.xsd">
    <tariff>
        <name>Pay more - talk less!</name>
        <operatorName>GreedyCom</operatorName>
